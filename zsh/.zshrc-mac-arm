# .zshrc for jay personal macbook air (m2 arm), v5.0, sonoma
# 231207, using .jax-aliases

export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="jax"
export UPDATE_ZSH_DAYS=180
COMPLETION_WAITING_DOTS="false"
plugins=(git zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh

eval "$(/opt/homebrew/bin/brew shellenv)" # for homebrew
export HOMEBREW_NO_AUTO_UPDATE=1 && export HOMEBREW_NO_ANALYTICS=1

# node version manager, $ mkdir ~/.nvm
export NVM_DIR="$HOME/.nvm"
  [ -s "/usr/local/opt/nvm/nvm.sh" ] && \. "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
  [ -s "/usr/local/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/usr/local/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

# set PATH
export PATH=/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:

# aliases
unalias -a # destroy all existing aliases

source $HOME/.jax-aliases

alias newzsh='wget -O /Users/$USER/.zshrc https://raw.githubusercontent.com/jayknyn/public/main/zsh/.zshrc-mac-arm && wget -O /Users/$USER/.oh-my-zsh/themes/jax.zsh-theme https://raw.githubusercontent.com/jayknyn/public/main/zsh/jax-mac.zsh-theme && wget -O /Users/$USER/.jax-aliases https://raw.githubusercontent.com/jayknyn/public/main/zsh/.jax-aliases && source ~/.zshrc'

alias ls='ls -G' # ls - TAB for all varibales

alias dc='docker-compose'

alias du='du -h -d 1'

alias jk='cd ~/codejk'
alias vsc='codium .'
alias jax='cd ~/codejk/jax-cloud && vsc'
alias pub='cd ~/codejk/public && vsc'

alias n='npm'
alias nr='npm run'
alias ni='npm install'
alias nc='npm ci'
alias ns='npm run start'
alias nv='npm version'
alias na='npm audit'
alias naf='npm audit fix'

alias yt='yt-dlp --config-location ~/.config/yt-dl/config'

alias mxayam='ssh mx-ayam'
alias vlad='ssh vlad'
alias monitoring='ssh gcp1'
alias kisco='ssh kisco'
alias basement='ssh jibhi3'
alias agonda='ssh agonda'
alias ns1='ssh nomad-server1'
alias ns2='ssh nomad-server2'
alias ns21='ssh nomad-ayam21'
alias ns31='ssh nomad-ayam31'

##
#cd ~/codejk
