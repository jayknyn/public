# common aliases for mac: x86, arm | v2
# 240909

alias ls='ls -G' # ls - TAB for all varibales

alias dc='docker-compose'
alias sed='gsed'

# can modify, replace -h with -m to see all in MB, use -t to get modify time
alias du='du -h -d 1'

alias jk='cd ~/codejk'
alias jax='cd ~/codejk/jax-cloud && vsc'
alias pub='cd ~/codejk/public && vsc'

alias n='npm'
alias nr='npm run'
alias ni='npm install'
alias nid='npm install --save-dev'
alias nu='npm uninstall'
alias nc='npm ci'
alias ns='npm run start'
alias nd='npm run dev'
alias nb='npm run build'
alias nv='node -v'
alias na='npm audit'
alias naf='npm audit fix'

alias yt='yt-dlp --config-location ~/.config/yt-dl/config'
alias ytv='yt-dlp --config-location ~/.config/yt-dl/config-video'

# ssh configs
