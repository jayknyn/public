# .zshrc for linux servers, v5.0
# 231204, using .jax-aliases

export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="jax"
export UPDATE_ZSH_DAYS=180
COMPLETION_WAITING_DOTS="true"
plugins=(git zsh-autosuggestions)
source $ZSH/oh-my-zsh.sh

# aliases 
unalias -a # destroy all existing aliases

source $HOME/.jax-aliases # load common aliases between linux and mac

alias newzsh='wget -O /home/$USER/.zshrc https://raw.githubusercontent.com/jayknyn/public/main/zsh/.zshrc-linux && wget -O /home/$USER/.oh-my-zsh/themes/jax.zsh-theme https://raw.githubusercontent.com/jayknyn/public/main/zsh/jax-linux.zsh-theme && wget -O /home/$USER/.jax-aliases https://raw.githubusercontent.com/jayknyn/public/main/zsh/.jax-aliases && source ~/.zshrc'

alias ls='ls --color=auto' # ls - TAB for all varibales

alias dc='docker compose'

alias du='sudo du -h --max-depth=1'
alias dugb='sudo du -h --max-depth=1 --threshold=1GB'

alias el='docker exec mailserver setup email list'

alias res='landscape-sysinfo --exclude-sysinfo-plugins=Network,Processes'
alias fw='sudo ufw status | grep ALLOW'

alias ssr='sudo systemctl restart'
alias sss='sudo systemctl status'
alias start='sudo systemctl start'
alias stop='sudo systemctl stop'
alias enable='sudo systemctl enable'

alias jp='nomad job plan'
alias jr='nomad job run'
alias tl='sudo tail -f server.log'

count() { ls -A $1 | wc -l }

cd /opt && ps && landscape-sysinfo --exclude-sysinfo-plugins=Network,Processes

